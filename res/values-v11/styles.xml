<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="NoTitleBarNoShadowTheme" parent="@*android:style/Theme.Holo.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="DialogTheme" parent="@*android:style/Theme.Holo.Light.Dialog" />
    <style name="CheckBoxStyle" parent="@*android:style/Widget.Holo.CompoundButton.CheckBox" />
    <style name="PlayPopupSelector" parent="@*android:style/Theme.Holo.Dialog">
        <item name="android:windowBackground">@*android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/PlayPopupSelectorAnimation</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">stateUnchanged|adjustResize</item>
    </style>
    <style name="MusicActivityTheme" parent="@style/BaseMusicActivityThemev11" />
    <style name="Widget.AppCompat.Base.ProgressBar.Horizontal" parent="@*android:style/Widget.Holo.ProgressBar.Horizontal" />
    <style name="Widget.AppCompat.Base.ProgressBar" parent="@*android:style/Widget.Holo.ProgressBar" />
    <style name="Widget.AppCompat.Base.AutoCompleteTextView" parent="@*android:style/Widget.Holo.AutoCompleteTextView" />
    <style name="Widget.AppCompat.Light.Base.AutoCompleteTextView" parent="@*android:style/Widget.Holo.Light.AutoCompleteTextView" />
    <style name="Theme.Base" parent="@*android:style/Theme.Holo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="buttonBarStyle">?android:buttonBarStyle</item>
        <item name="buttonBarButtonStyle">?android:buttonBarButtonStyle</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
    </style>
    <style name="Theme.Base.Light" parent="@*android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="buttonBarStyle">?android:buttonBarStyle</item>
        <item name="buttonBarButtonStyle">?android:buttonBarButtonStyle</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
    </style>
    <style name="BaseMusicActivityThemev11" parent="@style/BaseMusicActivityTheme">
        <item name="android:actionBarStyle">@style/MusicActionBar</item>
        <item name="android:actionDropDownStyle">@style/MusicActionBar.Spinner.DropDown</item>
        <item name="android:actionButtonStyle">@style/MusicActionBarButton</item>
        <item name="android:actionOverflowButtonStyle">@style/MusicOverflow</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_dark</item>
        <item name="android:selectableItemBackground">@drawable/white_highlight</item>
        <item name="android:fastScrollThumbDrawable">@drawable/fastscroll_thumb_holo</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
</resources>
